<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="me.dacol.marco.mancala.statisticsUI.StatisticsFragment"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:baselineAligned="false"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="@dimen/abc_action_button_min_height_material"
            android:layout_height="@dimen/abc_action_button_min_height_material"
            android:src="@drawable/back_arrow"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/statistics_action_bar_title"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="3"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/statistics_font_size_title"
            android:textStyle="bold"
            android:text="@string/title_HvH_games_stats"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_view_horizontal_margin"
                android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                android:textSize="@dimen/statistics_font_size"
                android:text="@string/played_games"/>
            <TextView
                android:id="@+id/played_games_HvH_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/statistics_font_size"
                tools:text="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_view_horizontal_margin"
                android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                android:textSize="@dimen/statistics_font_size"
                android:text="@string/best_score"/>
            <TextView
                android:id="@+id/best_score_HvH_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/statistics_font_size"
                tools:text="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_view_horizontal_margin"
                android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                android:textSize="@dimen/statistics_font_size"
                android:text="@string/win_games"/>
            <TextView
                android:id="@+id/win_games_HvH_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/statistics_font_size"
                tools:text="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_view_horizontal_margin"
                android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                android:textSize="@dimen/statistics_font_size"
                android:text="@string/even_games"/>
            <TextView
                android:id="@+id/even_games_HvH_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/statistics_font_size"
                tools:text="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_view_horizontal_margin"
                android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                android:textSize="@dimen/statistics_font_size"
                android:text="@string/lose_games"/>
            <TextView
                android:id="@+id/lose_games_HvH_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/statistics_font_size"
                tools:text="0"
                />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/statistics_font_size_title"
                android:textStyle="bold"
                android:text="@string/title_HvC_games_stats"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_view_horizontal_margin"
                    android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                    android:textSize="@dimen/statistics_font_size"
                    android:text="@string/played_games"/>
                <TextView
                    android:id="@+id/played_games_HvC_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/statistics_font_size"
                    tools:text="0"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_view_horizontal_margin"
                    android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                    android:textSize="@dimen/statistics_font_size"
                    android:text="@string/best_score"/>
                <TextView
                    android:id="@+id/best_score_HvC_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/statistics_font_size"
                    tools:text="0"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_view_horizontal_margin"
                    android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                    android:textSize="@dimen/statistics_font_size"
                    android:text="@string/win_games"/>
                <TextView
                    android:id="@+id/win_games_HvC_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/statistics_font_size"
                    tools:text="0"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_view_horizontal_margin"
                    android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                    android:textSize="@dimen/statistics_font_size"
                    android:text="@string/even_games"/>
                <TextView
                    android:id="@+id/even_games_HvC_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/statistics_font_size"
                    tools:text="0"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_view_horizontal_margin"
                    android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                    android:textSize="@dimen/statistics_font_size"
                    android:text="@string/lose_games"/>
                <TextView
                    android:id="@+id/lose_games_HvC_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/statistics_font_size"
                    tools:text="0"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/statistics_font_size_title"
                android:textStyle="bold"
                android:text="@string/title_last_played_games"
                />
            <ListView
                android:id="@+id/last_game_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                >

            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
